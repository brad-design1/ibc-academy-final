---
import { Image } from 'astro:assets';

const navItems = [
  { href: '/learn', label: 'Learn' },
  { href: '/webinar', label: 'Webinar', highlight: true },
  { href: '/watch', label: 'Watch' },
  { href: '/listen', label: 'Listen' },
  { href: '/book', label: 'The Book' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class="sticky top-0 z-50 bg-[#FAF9F6]/95 backdrop-blur-md border-b border-[#E8E6E1] transition-all duration-300">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between h-16">
      {/* Logo */}
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 rounded-lg bg-[#B8860B] flex items-center justify-center text-[#1A1A1A] font-serif font-bold text-lg group-hover:scale-105 transition-transform">
          IBC
        </div>
        <span class="font-serif text-lg font-semibold text-[#1A1A1A] hidden sm:block">Academy</span>
      </a>

      {/* Desktop Navigation */}
      <nav class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'nav-link',
              currentPath.startsWith(item.href) && 'active'
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>

      {/* Search + CTA Buttons */}
      <div class="hidden md:flex items-center gap-4">
        {/* Search trigger */}
        <button
          id="search-trigger"
          class="flex items-center gap-2 px-3 py-2 rounded-lg bg-[#F5F4F0] border border-[#E8E6E1] text-[#6B6B6B] hover:text-[#1A1A1A] hover:border-[#C9C7C2] transition-all text-sm"
          aria-label="Search"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
          <span>Search</span>
          <kbd class="hidden lg:inline-flex items-center gap-0.5 px-1.5 py-0.5 rounded bg-white border border-[#E8E6E1] text-[10px] text-[#6B6B6B] font-mono ml-1">
            <span id="search-shortcut-key">⌘</span>K
          </kbd>
        </button>
        <a 
          href="https://www.skool.com/ibc-academy" 
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm font-medium text-[#4A4A4A] hover:text-[#B8860B] transition-colors"
        >
          Community
        </a>
        <a 
          href="/schedule" 
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary"
        >
          Book a Call
        </a>
      </div>

      {/* Mobile: Search + Menu */}
      <div class="md:hidden flex items-center gap-1">
        {/* Mobile search trigger */}
        <button
          id="mobile-search-trigger"
          class="p-2 rounded-lg hover:bg-[#F5F4F0] transition-colors"
          aria-label="Search"
        >
          <svg class="w-5 h-5 text-[#4A4A4A]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
        </button>
        {/* Mobile Menu Button */}
        <button 
          id="mobile-menu-btn" 
          class="p-2 rounded-lg hover:bg-[#F5F4F0] transition-colors"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  {/* Mobile Menu */}
  <div id="mobile-menu" class="hidden md:hidden bg-[#FAF9F6] border-t border-[#E8E6E1]">
    <div class="container mx-auto px-6 py-4 space-y-4">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block py-2 text-[#4A4A4A] hover:text-[#B8860B] font-medium transition-colors"
        >
          {item.label}
        </a>
      ))}
      <div class="pt-4 border-t border-[#E8E6E1] space-y-3">
        <a 
          href="https://www.skool.com/ibc-academy" 
          target="_blank"
          rel="noopener noreferrer"
          class="block py-2 text-[#4A4A4A] hover:text-[#B8860B] font-medium"
        >
          Community
        </a>
        <a 
          href="/schedule" 
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary w-full justify-center"
        >
          Book a Call
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuBtn?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });

  // Platform-aware keyboard shortcut display
  const shortcutKey = document.getElementById('search-shortcut-key');
  if (shortcutKey) {
    const isMac = navigator.platform?.toUpperCase().indexOf('MAC') >= 0 || 
                  navigator.userAgent?.toUpperCase().indexOf('MAC') >= 0;
    shortcutKey.textContent = isMac ? '⌘' : 'Ctrl+';
  }
</script>

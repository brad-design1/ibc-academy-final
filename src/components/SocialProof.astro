<section class="pt-10 pb-20 lg:pt-14 lg:pb-28 relative overflow-hidden">
  <div class="absolute inset-0 bg-[#FAF9F6]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_rgba(201,168,76,0.04)_0%,_transparent_70%)]"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-16 fade-in-up">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-[#1A1A1A] tracking-tight">
        What People Are <span class="text-[#B8860B]">Saying</span>
      </h2>
      <p class="mt-4 text-lg text-[#4A4A4A]">
        Real feedback from real learners. No paid testimonials — ever.
      </p>
    </div>

    <!-- Testimonial grid / carousel -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 stagger-children">
      {testimonials.map((t) => (
        <div class="glass-card rounded-2xl p-6 lg:p-8 flex flex-col">
          {/* Stars */}
          <div class="flex gap-1 mb-4">
            {[...Array(5)].map(() => (
              <svg class="w-4 h-4 text-[#B8860B]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          {/* Quote */}
          <p class="text-[#4A4A4A] text-sm leading-relaxed flex-1">
            "{t.quote}"
          </p>

          {/* Author */}
          <div class="mt-5 pt-4 border-t border-white/[0.06]">
            <p class="text-[#B8860B] text-sm font-semibold">— {t.author}</p>
            <p class="text-[#6B6B6B] text-xs mt-0.5">{t.context}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

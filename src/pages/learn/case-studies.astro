---
import Layout from '../../layouts/Layout.astro';

const caseStudies = [
  {
    title: 'The Family Banking System',
    description: "How one family used IBC to finance cars, college, and a home — all while building generational wealth.",
    category: 'Family',
    status: 'Coming Soon',
  },
  {
    title: 'The Chiropractor\'s Practice',
    description: "A small business owner uses IBC to finance equipment, manage cash flow, and build a retirement system — all outside the traditional banking system.",
    category: 'Business',
    status: 'Coming Soon',
  },
  {
    title: 'Real Estate Financing with IBC',
    description: "Using policy loans to finance rental property acquisitions while maintaining uninterrupted compounding.",
    category: 'Real Estate',
    status: 'Coming Soon',
  },
];
---

<Layout title="Case Studies" description="Real-world examples of the Infinite Banking Concept in action.">
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mb-16">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-white">
          Case <span class="text-gold">Studies</span>
        </h1>
        <p class="mt-4 text-xl text-slate-300">
          Real-world examples of IBC in action. These aren't hypothetical — they're actual applications of the process.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {caseStudies.map((study) => (
          <div class="bg-navy/30 border border-navy-light/20 rounded-2xl p-8">
            <div class="flex items-center justify-between mb-4">
              <span class="text-xs font-medium text-gold bg-gold/10 px-2.5 py-1 rounded-md">{study.category}</span>
              <span class="text-xs text-slate-500 font-medium">{study.status}</span>
            </div>
            <h2 class="text-xl font-bold text-white mb-3">{study.title}</h2>
            <p class="text-slate-400 leading-relaxed">{study.description}</p>
          </div>
        ))}
      </div>

      <div class="mt-12 bg-navy/30 border border-navy-light/20 rounded-2xl p-8 text-center">
        <p class="text-slate-400">More case studies are being developed. Join the community to be notified when new content is published.</p>
        <a href="/community" class="inline-block mt-4 text-gold font-semibold hover:text-gold-light transition-colors">Join the Community →</a>
      </div>
    </div>
  </section>
</Layout>

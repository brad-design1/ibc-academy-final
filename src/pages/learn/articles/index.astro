---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const articles = (await getCollection('articles'))
  .filter((a) => !a.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categoryLabels: Record<string, string> = {
  fundamentals: 'Fundamentals',
  mechanics: 'Mechanics',
  principles: 'Principles',
  'case-study': 'Case Study',
  'compared-to-what': 'Compared to What',
  'austrian-economics': 'Austrian Economics',
};
---

<Layout title="Articles" description="Deep dives into IBC concepts, Austrian economics, and sound money principles.">
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mb-16">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-white">
          Articles & <span class="text-gold">Blog</span>
        </h1>
        <p class="mt-4 text-xl text-slate-300">
          Deep dives into IBC concepts, Austrian economics, and sound money principles.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {articles.map((article) => (
          <a
            href={`/learn/articles/${article.id}`}
            class="group block bg-navy/30 border border-navy-light/20 rounded-2xl p-6 hover:border-gold/30 transition-all duration-300"
          >
            <span class="inline-block text-xs font-medium text-gold bg-gold/10 px-2.5 py-1 rounded-md mb-4">
              {categoryLabels[article.data.category] || article.data.category}
            </span>
            <h2 class="text-lg font-bold text-white group-hover:text-gold transition-colors mb-2">
              {article.data.title}
            </h2>
            <p class="text-slate-400 text-sm leading-relaxed line-clamp-3">
              {article.data.description}
            </p>
            <div class="mt-4 flex items-center justify-between">
              <time class="text-xs text-slate-500" datetime={article.data.pubDate.toISOString()}>
                {article.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <svg class="w-4 h-4 text-slate-600 group-hover:text-gold transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      {articles.length === 0 && (
        <div class="text-center py-12">
          <p class="text-slate-400 text-lg">No articles published yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</Layout>

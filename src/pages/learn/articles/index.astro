---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const articles = (await getCollection('articles'))
  .filter((a) => !a.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categoryLabels: Record<string, string> = {
  fundamentals: 'Fundamentals',
  mechanics: 'Mechanics',
  principles: 'Principles',
  'case-study': 'Case Study',
  'compared-to-what': 'Compared to What',
  'austrian-economics': 'Austrian Economics',
  parent: "Parent's Path",
  'freedom-seeker': 'Freedom Seeker',
  professional: 'Professional',
  'business-owner': 'Business Owner',
  'just-curious': 'Just Curious',
  'deeper-understanding': 'Deeper Understanding',
  'prove-it': 'Prove It',
  'real-estate': 'Real Estate',
};

// Group filters
const pathFilters = ['parent', 'freedom-seeker', 'professional', 'business-owner', 'just-curious', 'deeper-understanding', 'prove-it', 'real-estate'];
const topicFilters = ['fundamentals', 'mechanics', 'principles', 'case-study', 'compared-to-what'];

// Get unique categories that exist in articles
const existingCategories = [...new Set(articles.map(a => a.data.category))];
const activePaths = pathFilters.filter(p => existingCategories.includes(p));
const activeTopics = topicFilters.filter(t => existingCategories.includes(t));
---

<Layout title="Articles" description="Deep dives into IBC concepts, Austrian economics, and sound money principles.">
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mb-12">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-[#1A1A1A]">
          Articles & <span class="text-[#B8860B]">Blog</span>
        </h1>
        <p class="mt-4 text-xl text-[#4A4A4A]">
          Deep dives into IBC concepts, Austrian economics, and sound money principles.
        </p>
      </div>

      <!-- Filter Section -->
      <div class="mb-10 space-y-4">
        <!-- Paths -->
        {activePaths.length > 0 && (
          <div>
            <span class="text-sm font-medium text-[#6B6B6B] mr-3">Paths:</span>
            <div class="inline-flex flex-wrap gap-2 mt-2">
              {activePaths.map((cat) => (
                <button
                  data-filter={cat}
                  class="filter-btn px-3 py-1.5 text-sm font-medium rounded-lg border border-slate-600/50 text-[#4A4A4A] hover:border-[#B8860B]/50 hover:text-[#B8860B] transition-all duration-200"
                >
                  {categoryLabels[cat] || cat}
                </button>
              ))}
            </div>
          </div>
        )}

        <!-- Topics -->
        {activeTopics.length > 0 && (
          <div>
            <span class="text-sm font-medium text-[#6B6B6B] mr-3">Topics:</span>
            <div class="inline-flex flex-wrap gap-2 mt-2">
              {activeTopics.map((cat) => (
                <button
                  data-filter={cat}
                  class="filter-btn px-3 py-1.5 text-sm font-medium rounded-lg border border-slate-600/50 text-[#4A4A4A] hover:border-[#B8860B]/50 hover:text-[#B8860B] transition-all duration-200"
                >
                  {categoryLabels[cat] || cat}
                </button>
              ))}
            </div>
          </div>
        )}

        <!-- Clear Filter -->
        <div>
          <button
            id="clear-filters"
            class="text-sm text-[#6B6B6B] hover:text-[#B8860B] transition-colors hidden"
          >
            âœ• Clear filters
          </button>
        </div>
      </div>

      <!-- Articles Grid -->
      <div id="articles-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {articles.map((article) => (
          <a
            href={`/learn/articles/${article.id}`}
            data-category={article.data.category}
            class="article-card group block bg-white border border-[#E8E6E1] rounded-2xl p-6 hover:border-[#B8860B]/30 transition-all duration-300"
          >
            <span class="inline-block text-xs font-medium text-[#B8860B] bg-[#B8860B]/10 px-2.5 py-1 rounded-md mb-4">
              {categoryLabels[article.data.category] || article.data.category}
            </span>
            <h2 class="text-lg font-bold text-[#1A1A1A] group-hover:text-[#B8860B] transition-colors mb-2">
              {article.data.title}
            </h2>
            <p class="text-[#4A4A4A] text-sm leading-relaxed line-clamp-3">
              {article.data.description}
            </p>
            <div class="mt-4 flex items-center justify-between">
              <time class="text-xs text-[#6B6B6B]" datetime={article.data.pubDate.toISOString()}>
                {article.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <svg class="w-4 h-4 text-slate-600 group-hover:text-[#B8860B] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      <!-- No results message -->
      <div id="no-results" class="text-center py-12 hidden">
        <p class="text-[#4A4A4A] text-lg">No articles match the selected filter.</p>
      </div>

      {articles.length === 0 && (
        <div class="text-center py-12">
          <p class="text-[#4A4A4A] text-lg">No articles published yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .filter-btn.active {
    background: rgba(212, 175, 55, 0.15);
    border-color: rgba(212, 175, 55, 0.6);
    color: #d4af37;
  }
  .article-card.hidden {
    display: none;
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const articleCards = document.querySelectorAll('.article-card');
  const clearBtn = document.getElementById('clear-filters');
  const noResults = document.getElementById('no-results');

  let activeFilter: string | null = null;

  function updateDisplay() {
    let visibleCount = 0;

    articleCards.forEach((card) => {
      const category = card.getAttribute('data-category');
      if (!activeFilter || category === activeFilter) {
        card.classList.remove('hidden');
        visibleCount++;
      } else {
        card.classList.add('hidden');
      }
    });

    // Show/hide no results message
    if (visibleCount === 0) {
      noResults?.classList.remove('hidden');
    } else {
      noResults?.classList.add('hidden');
    }

    // Show/hide clear button
    if (activeFilter) {
      clearBtn?.classList.remove('hidden');
    } else {
      clearBtn?.classList.add('hidden');
    }
  }

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');

      // Toggle off if clicking same filter
      if (activeFilter === filter) {
        activeFilter = null;
        btn.classList.remove('active');
      } else {
        // Remove active from all buttons
        filterBtns.forEach((b) => b.classList.remove('active'));
        // Set new filter
        activeFilter = filter;
        btn.classList.add('active');
      }

      updateDisplay();
    });
  });

  clearBtn?.addEventListener('click', () => {
    activeFilter = null;
    filterBtns.forEach((b) => b.classList.remove('active'));
    updateDisplay();
  });
</script>

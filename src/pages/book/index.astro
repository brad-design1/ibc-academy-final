---
import Layout from '../../layouts/Layout.astro';

const sections = [
  {
    title: 'About the Book',
    description: "Learn why \"Becoming Your Own Banker\" by R. Nelson Nash is the foundational text for understanding the Infinite Banking Concept.",
    href: '#about',
    icon: 'üìñ',
  },
  {
    title: 'Purchase',
    description: 'Get your copy of the book and start your IBC education journey.',
    href: '/book/purchase',
    icon: 'üõí',
  },
  {
    title: 'Free Chapter',
    description: 'Read a sample chapter before committing. See if the concepts resonate with you.',
    href: '/book/free-chapter',
    icon: 'üéÅ',
  },
  {
    title: 'Reading Guide',
    description: 'A companion guide to help you get the most out of each chapter.',
    href: '/book/reading-guide',
    icon: 'üó∫Ô∏è',
  },

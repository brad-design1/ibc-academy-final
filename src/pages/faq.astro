  <!-- Accordion Toggle Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const faqItems = document.querySelectorAll('[data-faq]');

      faqItems.forEach((item) => {
        const toggle = item.querySelector('.faq-toggle') as HTMLButtonElement;
        const content = item.querySelector('.faq-content') as HTMLElement;
        const icon = item.querySelector('.faq-icon') as HTMLElement;

        if (!toggle || !content || !icon) return;

        toggle.addEventListener('click', () => {
          const isOpen = toggle.getAttribute('aria-expanded') === 'true';

          // Close all other open items
          faqItems.forEach((otherItem) => {
            if (otherItem === item) return;
            const otherToggle = otherItem.querySelector('.faq-toggle') as HTMLButtonElement;
            const otherContent = otherItem.querySelector('.faq-content') as HTMLElement;
            const otherIcon = otherItem.querySelector('.faq-icon') as HTMLElement;
            if (otherToggle && otherContent && otherIcon) {
              otherToggle.setAttribute('aria-expanded', 'false');
              otherContent.classList.add('hidden');
              otherIcon.textContent = '+';
              otherIcon.classList.remove('rotate-45');
              otherItem.classList.remove('border-[#B8860B]/30');
            }
          });

          // Toggle current item
          if (isOpen) {
            toggle.setAttribute('aria-expanded', 'false');
            content.classList.add('hidden');
            icon.textContent = '+';
            icon.classList.remove('rotate-45');
            item.classList.remove('border-[#B8860B]/30');
          } else {
            toggle.setAttribute('aria-expanded', 'true');
            content.classList.remove('hidden');
            icon.textContent = '−';
            icon.classList.add('rotate-45');
            item.classList.add('border-[#B8860B]/30');
          }
        });
      });
    });
  </script>
